{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020", "dom"],
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "*.ts",
    "utils/**/*.ts",
    "routes/**/*.ts",
    "middleware/**/*.ts",
    "controllers/**/*.ts",
    "config/**/*.ts",
    "models/**/*.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
